# Variables de entorno requeridas para la aplicación
# Copia este archivo como .env y ajusta los valores según tu entorno

# Base de datos PostgreSQL
DB_HOST=your_database_host
DB_PORT=5432
DB_NAME=your_database_name
DB_USER=your_database_user
DB_PASSWORD=your_database_password

# Puerto de la aplicación (en Render se asigna automáticamente)
PORT=3000

# Configuración de cookies
COOKIE_SECRET=your_cookie_secret_here

# Modo de la aplicación
NODE_ENV=production  # development para local, production para Render
